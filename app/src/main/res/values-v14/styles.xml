<resources>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/AppActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/background_dark</item>
        <item name="android:displayOptions">disableHome|showTitle</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>